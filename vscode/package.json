{
	"name": "saros",
	"displayName": "saros",
	"description": "Saros implementation for VS Code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "saros.account.add",
				"title": "Add Account",
				"category": "Saros"
			},
			{
				"command": "saros.account.update",
				"title": "Update Account",
				"category": "Saros"
			},
			{
				"command": "saros.account.delete",
				"title": "Delete Account",
				"category": "Saros"
			},
			{
				"command": "saros.account.setDefault",
				"title": "Set Default Account",
				"category": "Saros"
			},
			{
				"command": "saros.contact.add",
				"title": "Add Contact",
				"category": "Saros",
				"icon": {
					"light": "media/btn/addaccount.png",
					"dark": "media/btn/addaccount.png"
				}
			},
			{
				"command": "saros.contact.remove",
				"title": "Remove Contact",
				"category": "Saros",
				"icon": {
					"light": "media/btn/deleteaccount.png",
					"dark": "media/btn/deleteaccount.png"
				}
			},
			{
				"command": "saros.contact.rename",
				"title": "Rename Contact",
				"category": "Saros",
				"icon": {
					"light": "media/btn/changeaccount.png",
					"dark": "media/btn/changeaccount.png"
				}
			},
			{
				"command": "saros.session.connect",
				"title": "Connect",
				"category": "Saros",
				"icon": {
					"light": "media/dlcl16/xmpp_connect_tsk.png",
					"dark": "media/dlcl16/xmpp_connect_tsk.png"
				}
			},
			{
				"command": "saros.session.disconnect",
				"title": "Disconnect",
				"category": "Saros",
				"icon": {
					"light": "media/dlcl16/xmpp_disconnect_tsk.png",
					"dark": "media/dlcl16/xmpp_disconnect_tsk.png"
				}
			},
			{
				"command": "saros.session.status",
				"title": "Status",
				"category": "Saros"
			},
			{
				"command": "saros.session.invite",
				"title": "Invite Contact",
				"category": "Saros",
				"icon": {
					"light": "media/elcl16/session_add_contacts_tsk.png",
					"dark": "media/elcl16/session_add_contacts_tsk.png"
				}
			},
			{
				"command": "saros.session.start",
				"title": "Start Session",
				"category": "Saros"
			},
			{
				"command": "saros.session.stop",
				"title": "Stop Session",
				"category": "Saros"
			},
			{
				"command": "saros.test",
				"title": "Test",
				"category": "Saros"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"saros.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the Saros server."
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "saros-view",
					"title": "Saros",
					"icon": "media/saros-logo.svg"
				}
			]
		},
		"views": {
			"saros-view": [
				{
					"id": "saros-contacts",
					"name": "Contact List"
				},
				{
					"id": "saros-session",
					"name": "Session"
				}
			],
			"explorer": [
				{
					"id": "saros-session",
					"name": "Saros",
					"when": "inSession"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "saros.session.connect",
					"when": "!connected && view == saros-contacts",
					"group": "navigation"
				},
				{
					"command": "saros.session.disconnect",
					"when": "connected && view == saros-contacts",
					"group": "navigation"
				},
				{
					"command": "saros.contact.add",
					"when": "connected && view == saros-contacts"
				}
			],
			"view/item/context": [
				{
					"command": "saros.contact.rename",
					"when": "viewItem == contact"
				},
				{
					"command": "saros.contact.remove",
					"when": "viewItem == contact"
				},
				{
					"command": "saros.session.invite",
					"group": "inline",
					"when": "viewItem == contact"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.17.13",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.6",
		"mocha": "^6.1.4",
		"tslint": "^5.20.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"get-port": "^5.1.1",
		"node-jre": "^0.2.3",
		"vscode-languageclient": "^6.0.1"
	}
}
